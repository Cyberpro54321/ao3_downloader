{

  "description": "Tool to streamline the process of downloading works from Archive Of Our Own with their original CSS theming (including workskins)",
  "manifest_version": 2,
  "name": "AO3 Downloader",
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "ao3_downloader@example.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.svg",
    "default_title": "Download"
  },

  "permissions": ["nativeMessaging"],
  
  "content_scripts": [
    {
      "matches": ["*://archiveofourown.org/works/*"],
      "js": ["foreground.js"]
    }
  ]

}
